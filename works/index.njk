---
layout: base.njk
title: "Works"
---

<div class="page-header">
    <h1>Works</h1>
</div>

<div class="works-grid">
    {% for work in collections.works %}
    <article class="work-card">
        <a href="{{ work.url }}">
            {% if work.data.featured_image %}
                <img src="{{ work.url }}{{ work.data.featured_image }}" alt="{{ work.data.title }}" />
            {% endif %}
            <div class="work-info">
                <h3>{{ work.data.title }}</h3>
                {% if work.data.year %}<span class="year">{{ work.data.year }}</span>{% endif %}
                {% if work.data.materials %}<span class="materials">{{ work.data.materials }}</span>{% endif %}
            </div>
        </a>
    </article>
    {% endfor %}
</div>