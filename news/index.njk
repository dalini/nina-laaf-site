---
layout: base.njk
title: "News"
---

<div class="page-header">
    <h1>News</h1>
</div>

<div class="news-list">
    {% for post in collections.news %}
    <article class="news-item">
        <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
        {% if post.data.date %}<time>{{ post.data.date }}</time>{% endif %}
        {% if post.data.excerpt %}<p>{{ post.data.excerpt }}</p>{% endif %}
    </article>
    {% endfor %}
    
    {% if collections.news.length === 0 %}
    <p>No news published yet.</p>
    {% endif %}
</div>