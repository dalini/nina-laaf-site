---
layout: base.njk
---

<article class="work">
    <div class="work-header">
        <h1>{{ title }}</h1>
        <div class="work-meta">
            {% if year %}<span class="year">{{ year }}</span>{% endif %}
            {% if materials %}<span class="materials">{{ materials }}</span>{% endif %}
            {% if dimensions %}<span class="dimensions">{{ dimensions }}</span>{% endif %}
        </div>
    </div>

    <div class="work-content">
        {{ content | safe }}
    </div>

    {% if images %}
    <div class="work-gallery">
        {% for image in images %}
            <figure class="work-image">
                {% image image.src, image.alt or title, "(min-width: 1024px) 50vw, 100vw" %}
                {% if image.caption %}<figcaption>{{ image.caption }}</figcaption>{% endif %}
            </figure>
        {% endfor %}
    </div>
    {% endif %}
</article>

<nav class="work-nav">
    <a href="/works/" class="back-link">‚Üê Back to Works</a>
</nav>